<h1> Hello <%=@current_user.username%>!</h1>

<%if @activities==[]%>
  <p>No Activities to Show!</p>
<%else%>
  <h3>All Activities</h3>
  <% @activities.each do |activity| %>
    <li> <%= activity.name.titleize %> </li>
  <%end%>
<%end%>

<h4><a href="/activities/new"> Add an Activity</a> &nbsp;&nbsp; <a href="/users/<%=@current_user.slug%>"> Profile</a>&nbsp;&nbsp;  <a href="/logout"> Logout</a></h4>
