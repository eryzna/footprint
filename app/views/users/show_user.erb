<h1> Hello, <%= @user.username %>. Here are your stats!</h1>


<% if @user.activities == [] %>
  <h4> No activities to show! Add one <a href="/activities/new"> here.</a> </h4>
<% else %>
  <% @user.activities.each do |a| %>
    <p> Activity Name: <%= a.name.capitalize %>  </p>
    <p> Activity Type: <%= a.activity_type.capitalize%> </p>
  <%end%>
<%end%>

<% @user.activities.each do |c| %>
  <%= c.credits %>
<%end%>
